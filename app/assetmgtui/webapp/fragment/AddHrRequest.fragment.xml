<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="createHrRequestDialog" title="Create New Request" class="sapUiPopupWithPadding">
        <VBox>
            <Select id="itemTypeSelect" selectedKey="{createHrRequestModel>/item}">
                <core:Item key="Laptop" text="Laptop" />
                <!-- <core:Item key="keyboard" text="Keyboard" /> -->
            </Select>
        </VBox>
        <beginButton>
            <Button text="Add" press="onAddCreateHrRequest" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelCreateHrRequest" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>

